            <string>if global.pause == false{

    image_speed = 0.045;//global.velocidade_sprite;
    
    x = pos_X[atual_X];
    y = y + 0.5;
    
    if(y &gt;= 310){
        //colisão
        if (x &gt;= (global.atual - 30) &amp;&amp; x &lt;= (global.atual + 70) &amp;&amp; global.resgate &lt;= 3){
            
            
            /*
                seguindo o modelo original, a pontuação máxima a ser exibida
                é a apenas até 999, caso chegue a mais que isso, o jogador
                continua a jogar, porém sem ganhar mais pontos
            */
            if global.points &gt;= 999{
                global.pontos_ganhos = 0;
            }
            
            /*
                bônus: caso a pontuação chegue a 300 pontos
                todas as chances são zeradas, e, caso não tenha chances 
                perdidas a pontuação ganha é dobrada até que o jogador
                perca uma vida
            */
            
            if global.points == 299 { 
                if global.chances &gt; 0{ 
                    global.chances = 0;
                    instance_destroy(obj_miss);
                }else{
                    global.pontos_ganhos = 2;
                }
            }
            
            global.points += global.pontos_ganhos;
            global.resgate += 1;
        }else{
            //codigo para perder vida
            global.pontos_ganhos = 1;
            global.chances += 1;
            global.resgate = 0;
            instance_create(990, 70, obj_miss);
            audio_play_sound(snd_miss1, 10, false);
        
            if (global.chances == 1) {
                obj_miss.image_index = 0;
            }else if (global.chances == 2) {
                instance_destroy(obj_miss);
                instance_create(990, 70, obj_miss);
                obj_miss.image_index = 1;
            } else if (global.chances == 3) {
                instance_destroy(obj_miss);
                instance_create(990, 70, obj_miss);
                obj_miss.image_index = 2;
                global.pause = true;
            }
        
            //nadando depois que não é resgatado
            instance_create(x, 375, obj_man_sinking);
            obj_shark.x = 115;
            global.pause = true;
            show_debug_message(obj_man_sinking.y);
        }
        instance_destroy();
    }
}else{
